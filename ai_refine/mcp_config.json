{
    "mcpServers": {
      "github": {
        "command": "python",
        "args": ["-m", "ai_refine.mcp_servers.github_server"],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
        }
      },
      "filesystem": {
        "command": "python", 
        "args": ["-m", "ai_refine.mcp_servers.filesystem_server"]
      },
      "compiler": {
        "command": "python",
        "args": ["-m", "ai_refine.mcp_servers.compiler_server"]
      }
    }
  }